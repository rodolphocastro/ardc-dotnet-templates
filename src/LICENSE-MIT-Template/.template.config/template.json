{
    "$schema": "http://json.schemastore.org/template",
    "author": "Rodolpho Alves",
    "classifications": [
        "Common",
        "LICENSE"
    ],
    "identity": "ARDC.Commons.License.MIT",
    "name": "License (MIT)",
    "shortName": "license-mit",
    "description": "A template for a MIT license",
    "tags": {
        "type": "item"
    },
    "symbols": {
        "name": {
            "type": "parameter",
            "defaultValue": "John Doe",
            "replaces": "MyName",
            "datatype": "text",
            "isRequired": true,
            "description": "Name to display in the license"
        },
        "year": {
            "type": "parameter",
            "defaultValue": "2020",
            "replaces": "9999",
            "datatype": "int",
            "isRequired": true,
            "description": "Year to display in the license"
        }
    }
}